#!/bin/bash
# Update Clojure stuff

if installed lein; then
  echo "Updating Leiningen..."
  lein upgrade
else
  echo "Leiningen not found, skipping"
fi

echo "Downloading zprint..."
# url=$(curl -s https://api.github.com/repos/kkinnear/zprint/releases/latest | awk -F '"' '/browser_download_url.*zprintm-/ {print $4}')

# curl -L $url -o $HOME/.bin/zprint

gh-download-latest kkinnear/zprint zprintm $HOME/zprint
chmod +x $HOME/zprint
