#!/bin/bash
# Update Homebrew

if installed brew; then
  echo "Updating homebrew..."
  cd "$(brew --repo)"
  git prune
  git gc
  cd - > /dev/null
  brew update
  brew upgrade
  brew cleanup
  brew prune
  brew doctor
  brew cask upgrade
  brew cask cleanup
else
  echo "Hombrew is not installed, skipping"
fi
