#!/bin/bash
# Save Arch Linux packages list

save_dir="$1/arch"
save_file="$save_dir/arch_packages.txt"

if [ -e '/etc/arch-release' ]; then
  echo "Saving Arch Linux packages list from the pacman database to $save_file..."
  pacman -Qqe > "$save_file"
else
  echo "Arch Linux not found, skipping"
fi
