#!/bin/bash
# Update Arch Linux

if [ -e '/etc/arch-release' ]; then
  echo "Updating Arch Linux..."
  sudo pacman -Syu --noconfirm
  sudo pacman -Qtdq > /dev/null && \
    sudo pacman --noconfirm -Rns $(pacman -Qtdq)
  sudo paccache -r
  sudo paccache -ruk0
  sudo pacman-optimize
else
  echo "Not running Arch Linux, skipping"
fi
