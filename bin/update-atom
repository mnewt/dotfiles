#!/bin/bash
# Update Atom Editor

restore_loc="$HOME/.atom/packages.txt"

if installed apm; then
  echo "Updating Atom"
  apm upgrade --no-confirm
  apm clean

  if [[ "$@" == "--save" ]]; then
    echo "Saving packages list to $restore_loc"
    apm list --bare --installed --dev false > "$restore_loc"
  fi
else
  echo "Atom not found, skipping"
fi
