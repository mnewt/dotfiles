#!/bin/bash
# Update ruby gems

if installed gem; then
  echo "Updating ruby gems..."
  installed update_rubygems || gem install rubygems-update
  update_rubygems
  # http://www.nokogiri.org/tutorials/installing_nokogiri.html#mac_os_x
  brew unlink xz
  gem update
  brew link xz
  gem clean
else
  echo "gem not installed, skipping"
fi
